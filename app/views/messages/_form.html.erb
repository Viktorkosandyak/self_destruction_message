<%= form_for @message do |f| %>
    <div class="form-group">
        <%= f.label :message %>
        <br />
        <%= f.text_area :body %>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
      <label class="form-check-label" for="exampleRadios1">destroy message after the first link visit
</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
      <label class="form-check-label" for="exampleRadios2">destroy after 1 hour
</label>
    </div>
    <div class="form-group">
        <%= f.submit 'Save', class: "btn btn-default btn-primary" %>
    </div>
<% end %>
